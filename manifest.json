{
  "manifest_version": 3,
  "name": "TuneTransporter",
  "version": "1.0",
  "description": "Automatically redirects music links between Spotify and YouTube Music.",
  "icons": {
    "16": "icons/icon16.jpeg",
    "32": "icons/icon32.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [ "https://open.spotify.com/track/*" ],
      "js": [ "spotify2ytm-content.js" ],
      "run_at": "document_idle"
    },
    {
      "matches": [ "https://music.youtube.com/watch*" ],
      "js": [ "ytm2spotify-content.js" ],
      "run_at": "document_idle"
    }
  ]
}