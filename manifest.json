// TuneTransporter/manifest.json
{
  "manifest_version": 3,
  "name": "TuneTransporter",
  "version": "1.0",
  "description": "Automatically redirects music links between Spotify and YouTube Music.",
  "icons": {
    "16": "icons/icon16.jpeg",
    "32": "icons/icon32.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    // Hosts needed for manifest content scripts AND executeScript
    "*://open.spotify.com/*",
    "*://music.youtube.com/*",
    "*://www.youtube.com/*" // Needed for fallback script and fallback target
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://open.spotify.com/track/*",
        "https://open.spotify.com/album/*",
        "https://open.spotify.com/artist/*"
      ],
      // Load utils.js first so showFeedback is available
      "js": [ "utils.js", "spotify2ytm-content.js" ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://music.youtube.com/watch*",
        "https://music.youtube.com/playlist?list=*",
        "https://music.youtube.com/channel/*"
      ],
      // Load utils.js first so showFeedback is available
      "js": [ "utils.js", "ytm2spotify-content.js" ],
      "run_at": "document_idle"
    },
    { // Fallback script doesn't currently use showFeedback, so no utils needed here
      "matches": [ "*://www.youtube.com/watch*" ],
      "js": [ "yt-fallback-content.js" ],
      "run_at": "document_idle"
    }
  ]
}